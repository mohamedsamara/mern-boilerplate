{
  "name": "mern-boilerplate",
  "version": "1.0.0",
  "description": "MERN Boilerplate",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build:client": "cross-env NODE_ENV=production webpack --mode=production  --config webpack/client/webpack.prod.js --color --progress",
    "build:server": "cross-env NODE_ENV=production webpack --mode=production --config webpack/server/webpack.prod.js",
    "start:server": "npm run clean && cross-env NODE_ENV=development webpack --mode=development --config webpack/server/webpack.dev.js",
    "start:client": "cross-env NODE_ENV=development webpack-dev-server --mode=development --config webpack/client/webpack.dev.js",
    "start": "npm run clean && concurrently 'npm run start:client' 'npm run start:server'",
    "start:production": "cross-env NODE_ENV=production node index.js",
    "production": "npm run clean && npm run build:client && npm run build:server",
    "report:clean": "rimraf dist/client/stats.json",
    "report:build": "npm run build:client",
    "report:start": "webpack-bundle-analyzer --port 4200 dist/client/stats.json",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}' --ignore-path .eslintignore",
    "lint:fix": "eslint '**/*.{js,jsx,ts,tsx}' --fix --ignore-path .eslintignore",
    "stylelint": "stylelint 'client/**/*.{css,scss,less}'",
    "stylelint:fix": "stylelint --fix 'client/**/*.{css,scss,less}'",
    "prettier": "prettier '**/*.{ts,tsx,js,jsx,json,css,scss,less,md}' --write",
    "precommit": "lint-staged",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,html,md}": [
      "npm run lint:fix",
      "git add"
    ],
    "*.{css,scss,less}": [
      "npm run stylelint:fix",
      "git add"
    ],
    "*.json": [
      "npm run prettier",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohamedsamara/mern-boilerplate.git"
  },
  "keywords": [
    "node",
    "express",
    "react",
    "webpack",
    "eslint",
    "material-ui"
  ],
